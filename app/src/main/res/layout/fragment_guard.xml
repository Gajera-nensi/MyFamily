<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e7e9">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16"
        android:text="Security"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/purple_card"
        app:cardBackgroundColor="#ac2cfe"
        app:cardCornerRadius="16dp"
        android:layout_margin="16dp"
        android:elevation="@dimen/dimen_16"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>

    <TextView
        android:id="@+id/text_sos"
        android:elevation="@dimen/dimen_16"
        app:layout_constraintStart_toStartOf="@id/purple_card"
        app:layout_constraintTop_toTopOf="@id/purple_card"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="24sp"
        android:text="SOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintEnd_toStartOf="@id/sos_img"
        app:layout_constraintStart_toStartOf="@id/purple_card"
        android:elevation="8dp"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@id/text_sos"
        android:id="@+id/sos_msg"
        android:layout_margin="16dp"
        android:text="In case of emergency, keep telling family members to contact me"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/sos_img"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="@id/purple_card"
        app:layout_constraintTop_toTopOf="@id/purple_card"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="@id/purple_card"
        android:src="@drawable/ic_sos"
        android:layout_width="96dp"
        android:layout_height="96dp"/>



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/blue_card"
        app:cardBackgroundColor="#3a81b6"
        app:cardCornerRadius="16dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/purple_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>

    <TextView
        android:id="@+id/text_guard"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="@id/blue_card"
        app:layout_constraintTop_toTopOf="@id/blue_card"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:textSize="24sp"
        android:text="GUARD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintEnd_toStartOf="@id/guard_img"
        app:layout_constraintStart_toStartOf="@id/blue_card"
        android:elevation="8dp"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@id/text_guard"
        android:id="@+id/guard_msg"
        android:layout_margin="16dp"
        android:text="Open when you are on a potentially dangerous journey"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/guard_img"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="@id/blue_card"
        app:layout_constraintTop_toTopOf="@id/blue_card"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="@id/blue_card"
        android:src="@drawable/ic_guard"
        android:layout_width="96dp"
        android:layout_height="96dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>